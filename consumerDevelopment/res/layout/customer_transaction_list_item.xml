<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="horizontal"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/relative_layout_left"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text" 
            android:singleLine="true"
            android:textColor="@color/DarkGrey"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/merchant"
            android:text="Small Text"
            android:singleLine="true" 
            android:textColor="@color/mediumGray"
            android:textSize="11dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/relative_layout_right"
        android:layout_width="68dp"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/relative_layout_middle"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10000.00"
            android:textColor="@color/DarkGrey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relative_layout_middle"
        android:layout_width="68dp"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/relative_layout_left"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/relative_layout_right"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:textColor="@color/DarkGrey" />
    </LinearLayout>

</RelativeLayout>