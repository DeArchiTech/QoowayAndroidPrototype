<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_text"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/DarkGrey"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/DarkGrey"
            android:gravity="center"
            android:text="Merchant"
            android:textColor="@color/White"
            android:textSize="16dp"
			android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/points_title"
            android:layout_width="68dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:background="@color/DarkGrey"
            android:gravity="center"
            android:text="Points\nEarned"
            android:textColor="@color/White"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/sales_title"
            android:layout_width="68dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/points_title"
            android:background="@color/DarkGrey"
            android:gravity="center"
            android:text="Sales\nAmount"
            android:textColor="@color/White"
            android:textSize="16dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/qooPointsHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_text"
        android:background="@color/White"
        android:divider="@color/Gray3"
        android:dividerHeight="1dp" >
    </ListView>

</RelativeLayout>
