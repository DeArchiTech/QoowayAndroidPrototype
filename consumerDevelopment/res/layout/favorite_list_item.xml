<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/merchatnListLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drop_shadow_shape"
        android:orientation="horizontal" 
        android:padding="17dp">

        <!-- ListRow Left side Thumbnail image -->
		<!-- kakao is amaze
		adjusted padding again for better alignment -->

        <LinearLayout
            android:layout_marginRight="9dp"
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <ImageView
                android:layout_margin="3dp"
                android:paddingTop="1dp"
                android:paddingRight="4dp"
                android:id="@+id/list_image"
                android:layout_width="50dip"
                android:layout_height="50dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middleLayout"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toLeftOf="@+id/cancel"
            android:layout_toRightOf="@+id/thumbnail"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="@color/Black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:text="4567"
                android:textColor="@color/DarkGrey"
                android:textSize="10dip" />

            <TextView
                android:id="@+id/promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:text="99887"
                android:textColor="@color/Red"
                android:textSize="12dip" />
        </LinearLayout>

        <!-- Title Of Song -->
        <!-- Rightend Duration -->
        
        <!-- kakaooooo larger button field with a relative layout -->
            
	 	<RelativeLayout 
 	         android:id="@+id/cancelButton"
 	         android:layout_width="wrap_content"
 	         android:layout_height="wrap_content"
 	         android:layout_alignParentRight="true"
 	         android:layout_alignParentTop="true" >

	 	     <Button
	 	         android:id="@+id/cancel"
	 	         android:layout_width="20dp"
	 	         android:layout_height="20dp"
	 	         android:background="@drawable/favorites_no_circle"
	 	         android:layout_alignParentRight="true"
	 	         android:layout_alignParentTop="true" />
	 	     
 	     </RelativeLayout>

    </RelativeLayout>